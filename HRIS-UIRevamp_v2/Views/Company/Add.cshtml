<script>
        $(document).ready(function () {
            initializeUI();
            initializeEvents()
        });

        function initializeUI() {

            $('[data-val-required]:not([type=checkbox],[type=radio])').each(function (i, e) {
                $('label[for=' + $(e).attr('id') + ']').addClass('req');
            });

            $('#fiscalyearmonth').selectize({
                valueField: 'id',
                labelField: 'name',
                searchField: ['name'],
                dropdownParent: 'body',
                sortField: [{ field: 'id', direction: 'asc' }],
                options: [{ id: 1, name: 'January' },
                            { id: 2, name: 'February' },
                            { id: 3, name: 'March' },
                            { id: 4, name: 'April' },
                            { id: 5, name: 'May' },
                            { id: 6, name: 'June' },
                            { id: 7, name: 'July' },
                            { id: 8, name: 'August' },
                            { id: 9, name: 'September' },
                            { id: 10, name: 'October' },
                            { id: 11, name: 'November' },
                            { id: 12, name: 'December' }],
                onBlur: function () {
                    $(this.$input[0]).valid();
                }
            });

            monthly = $('#monthlycutoff').selectize({
                valueField: 'id',
                labelField: 'value',
                searchField: ['value'],
                dropdownParent: 'body',
                sortField: [{ field: 'id', direction: 'asc' }],
                options: generateDates(1, 31),
                onBlur: function () {
                    $(this.$input[0]).valid();
                }
            });

            semiFrom = $('#semicutofffrom').selectize({
                valueField: 'id',
                labelField: 'value',
                searchField: ['value'],
                dropdownParent: 'body',
                sortField: [{ field: 'id', direction: 'asc' }],
                options: generateDates(1, 15),
                onBlur: function () {
                    $(this.$input[0]).valid();
                }
            });

            semiTo = $('#semicutoffto').selectize({
                valueField: 'id',
                labelField: 'value',
                searchField: ['value'],
                dropdownParent: 'body',
                sortField: [{ field: 'id', direction: 'asc' }],
                options: generateDates(16, 31),
                onBlur: function () {
                    $(this.$input[0]).valid();
                }
            });

            weekly = $('#weeklycutoff').selectize({
                valueField: 'id',
                labelField: 'name',
                searchField: ['name'],
                dropdownParent: 'body',
                options: [{ id: '1', name: 'Monday' },
