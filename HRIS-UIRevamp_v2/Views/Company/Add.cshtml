                var target = $('#' + parent).nextAll('div:not(.hidden):first').attr('id');
                if ($('#CompanyFrm').valid()) {
                    $('#' + parent).slideUp(10, function () {
                        $('#' + target).slideDown(10, function () {
                            $('html, body').animate({
                                scrollTop: 100
                            }, 0);
                        });
                    });
                }
            });

            $("#back").on('click', function () {
                var _this = $(this);
                var parent = $(this).data('parent');
                var target = $('#' + parent).prevAll('div:not(.hidden):first').attr('id');

                $('#' + parent).slideUp(10, function () {
                    $('#' + target).slideDown(10, function () {
                        $('html, body').animate({
                            scrollTop: 100
                        }, 0);
                    });
                });

            });
        }

        function generateDates(from, to) {

            dates = [];

            for (var i = from; i < to + 1; i++) {
                var val = "";
                if (i == 1 || i == 21 || i == 31) {
                    val = i.toString() + "st";
                }
                else if (i == 2 || i == 22) {
                    val = i.toString() + "nd";
                }
                else if (i == 3 || i == 23) {
                    val = i.toString() + "rd";
                }
                else {
                    val = i.toString() + 'th';
                }
                dates.push({ id: i, value: val });
            }

            return dates;
        }

