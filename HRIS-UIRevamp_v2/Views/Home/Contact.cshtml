        "type": "OT",
        "status": "<span style='display: inherit; min-width: 145px'>APPROVED <span class='fs20 text-green001 glyphicon glyphicon-ok-circle pull-right'></span></span>"
    }, {
        "time": "08:00 AM To 05:00 PM",
        "type": "OT",
        "status": "<span style='display: inherit; min-width: 145px'>APPROVED <span class='fs20 text-green001 glyphicon glyphicon-ok-circle pull-right'></span></span>"
    }, {
        "time": "08:00 AM To 05:00 PM",
        "type": "OT",
        "status": "<span style='display: inherit; min-width: 145px'>APPROVED <span class='fs20 text-green001 glyphicon glyphicon-ok-circle pull-right'></span></span>"
    }, {
        "time": "08:00 AM To 05:00 PM",
        "type": "OT",
        "status": "<span style='display: inherit; min-width: 145px'>APPROVED <span class='fs20 text-green001 glyphicon glyphicon-ok-circle pull-right'></span></span>"
    }, {
        "time": "08:00 AM To 05:00 PM",
        "type": "OT",
        "status": "<span style='display: inherit; min-width: 145px'>APPROVED <span class='fs20 text-green001 glyphicon glyphicon-ok-circle pull-right'></span></span>"
    }, {
        "time": "08:00 AM To 05:00 PM",
        "type": "OT",
        "status": "<span style='display: inherit; min-width: 145px'>APPROVED <span class='fs20 text-green001 glyphicon glyphicon-ok-circle pull-right'></span></span>"
    }];

    $('#table-my-requests').dynatable({
        table: {
            defaultColumnIdStyle: 'underscore',
            copyHeaderClass: true
        },
        dataset: {
            records: recordsMyRequests
        },
        features: {
            paginate: false,
            search: false,
            recordCount: false,
            perPageSelect: false
        }
    });

    $('#datepicker').daterangepicker({
        "singleDatePicker": true,
        "autoUpdateInput": false,
        "opens": "left",
        locale: {
            format: 'DD/MM/YYYY'
        }
    });

    $('#datepicker').on('apply.daterangepicker', function (ev, picker) {
        $('#date').val(picker.startDate.format('DD/MM/YYYY'));
        $('#day').val(picker.startDate.format('dddd'));
    });

  
</script>

